<script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.1/jquery.min.js"></script>

<%= form_for(@post) do |f| %>

  <%= f.text_field :title, placeholder: "Title your post", class: "post-title-input" %>
  <%= f.text_area :body, placeholder: "Write your post in Markdown", class: "post-body-input", required: true %>
  <%= f.submit value: "Go for it", class: "post-submit" %>

<% end %>

<%= javascript_include_tag "new_post" %>
