<%= javascript_include_tag "//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js" %>

<%= form_for(@post) do |f| %>

  <%= f.text_field :title, placeholder: "Title your post", class: "post-title-input" %>
  <%= f.text_area :body, placeholder: "Write your post in Markdown", class: "post-body-input", required: true %>
  <%= f.submit value: "Go for it", class: "post-submit" %>

<% end %>

<script type="text/javascript">

var $window = $(window);
var $titleEl = $(".post-title-input");
var $bodyEl = $(".post-body-input");
var $submitEl = $(".post-submit");

$titleEl.focus();

var resize = function() {
  var newHeight = $window.height() - $titleEl.height() - $submitEl.height() - 100;
  $bodyEl.height(newHeight);
};

$window.on("resize", resize);
resize();

</script>
